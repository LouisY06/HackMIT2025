{
  "name": "reflourish",
  "version": "1.0.0",
  "description": "Food waste management platform transforming waste into community impact",
  "main": "index.js",
  "scripts": {
    "install-all": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
    "start-backend": "cd backend && python3 app.py",
    "start-frontend": "cd frontend && npm start",
    "start": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "build": "cd frontend && npm run build",
    "test": "cd frontend && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LouisY06/HackMIT2025.git"
  },
  "keywords": [
    "food-waste",
    "sustainability",
    "community-impact",
    "logistics",
    "react",
    "flask",
    "firebase",
    "google-maps"
  ],
  "author": "HackMIT 2025 Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
